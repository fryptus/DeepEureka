{
  "name": "eureka",
  "version": "1.0.0",
  "description": "Eureka Research Assistant",
  "author": "fryptus",
  "license": "MIT",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "next build",
    "test-build": "node scripts/test-build.js",
    "test-prod": "npm run build-electron && electron .",
    "dist": "npm run build-electron && electron-builder",
    "dist-win": "npm run build-electron && electron-builder --win",
    "dist-mac": "npm run build-electron && electron-builder --mac",
    "dist-linux": "npm run build-electron && electron-builder --linux",
    "clean": "rimraf .next && rimraf release"
  },
  "build": {
    "appId": "com.yourcompany.eureka",
    "productName": "Eureka Research Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app/.next/standalone",
        "filter": ["**/*"]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static",
        "filter": ["**/*"]
      },
      {
        "from": "public",
        "to": "app/public",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@mdxeditor/editor": "^3.40.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@xyflow/react": "^12.8.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-flow-renderer": "^10.3.17",
    "react-markdown": "^10.1.0",
    "reactflow": "^11.11.4",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  }
}
